<h1>制限ワード追加</h1>

<% if @limit.errors.any? %>
  制限ワードが重複しています
  <ul>
    <% @limit.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @limit, url: admin_limits_path(@limit), method: :post do |f| %>
<table>
  <tr>
    <th>ワード</th>
    <td><%= f.text_field :word,class: "form-control", placeholder: "ワード" %></td>
  </tr>
</table>
<div class="d-flex justify-content-center"><%= f.submit "追加", class: "btn btn-success" %></div>
<% end %>