<h1>通知一覧</h1>

<%# notifications = @notifications.where.not(visitor_id: current_user.id) %>
<% if @notifications.exists? %>
  <% @notifications.each do |notification| %>
  <%= render "notification", notification: notification %>
  <% end %>
  <%= paginate @notifications %>
<% else %>
<div>通知はありません</div>
<% end %>
