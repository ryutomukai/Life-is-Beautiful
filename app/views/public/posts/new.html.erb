<div class="container-xxl mt-5 mx-5">



        <h2 class="ml-5">新規投稿</h2>

<div class="row">
  <%= form_with model: @post do |f| %>

      <div class="col-lg-12">


          <%= f.label :投稿画像 %>
          <%= f.file_field :image, accept: "image/*" %><br><br>
      </div>
      <div class="col-lg-12">
          <%= f.label :投稿動画 %>
          <%= f.file_field :video %><br><br>
</div>
<div class="col-lg-12">
          タイトル
          <%= f.text_field :title,class: "form-control", placeholder: "タイトル" %><br><br>
</div>
<div class="col-lg-12">
          文章
          <%= f.text_area :body,class: "form-control", placeholder: "文章" %><br><br>
</div>
          <div class="col-lg-12">
            <%= f.submit "新規投稿", class: "btn btn-success" %>

    </div>

      <% end %>
</div>
</div>