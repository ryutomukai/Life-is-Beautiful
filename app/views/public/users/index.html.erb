<h1>ユーザー一覧</h1>
<!--検索フォーム-->
<%= search_form_for @q do |f| %>
  <!--name_contは、あいまい検索を指定-->
  <%= f.text_field :name_cont %>
  <%= f.submit "検索" %>
<% end %>
<!--検索結果-->
<% if params[:q].nil? %>
  <% @userall.each do |user| %>
    <%= image_tag user.get_profile_image(50,50) %>
    <%= link_to user_path(user) do %>
      <%= user.name %>
    <% end %>
  <% end %>
<% elsif !@users.present? && !params[:q].empty? %>
  <p>検索結果はありません</p>
<% elsif @users.present? %>
  <% @users.each do |user| %>
    <%= user.name %>
  <% end %>
<% end %>