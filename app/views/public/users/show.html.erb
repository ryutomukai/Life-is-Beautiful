<h1>マイページ</h1><br>

<%= image_tag @user.get_profile_image(200,200) %><br>
<%= @user.name %><br>
<%= @user.email %><br>
<%= @user.phone_number %><br>
<%= @user.introduction %><br>
フォロー数: <%= link_to user_followings_path(@user) do %>
  <%= @user.followings.count %>
  <% end %>
フォロワー数: <%= link_to user_followers_path(@user) do %>
  <%= @user.followers.count %>
  <% end %>

<% if current_user.following?(@user) %>
  <%= link_to "フォロー外す", user_relationships_path(@user.id), method: :delete %>
<% else %>
  <%= link_to "フォローする", user_relationships_path(@user.id), method: :post %>
<% end %>

<%= link_to "いいね一覧", favorites_user_path(@user) %>
<%= link_to "通知一覧", notifications_path %>

<% if current_user == @user && @user.name != "ゲストユーザー" %>
  <%= link_to "新規投稿", new_post_path %>
  <%= link_to "編集する", edit_user_path %>
  <%= link_to "退会する",unsubscribe_path  %><br>
<% end %>

<% @posts.each do |post| %>
  <tr>
    <%= link_to post_path(post.id) do %>
      <%= post.title %>
    <% end %>
    <%= post.body %>
  </tr>
<% end %>
